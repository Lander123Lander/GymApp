<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GymApp_frontend.Pages.WelcomePage"
    Title="Welcome"
    BackgroundColor="{StaticResource Bg}">

    <VerticalStackLayout 
        Spacing="25"
        Padding="40"
        VerticalOptions="Center">

        <Label 
            Text="Welcome"
            FontSize="40"
            FontAttributes="Bold"
            TextColor="{StaticResource Text}"
            HorizontalOptions="Center" />

        <VerticalStackLayout Spacing="4">
            <Label 
                Text="Don't have an account yet?"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="{StaticResource Text2}" />
            <Button 
                Text="Login"
                Style="{StaticResource ButtonPrimary}"
                Clicked="OnLoginClicked" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="4">
            <Label 
                Text="Already have an account?"
                FontSize="16"
                TextColor="{StaticResource Text2}"
                HorizontalOptions="Center" />
            <Button 
                Text="Create Account"
                Style="{StaticResource ButtonGhost}"
                Clicked="OnCreateAccountClicked" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
